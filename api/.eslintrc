{
	"env": {
		"browser": false,
		"es6": true,
		"node": true
	},
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 6,
		"ecmaFeatures": {
			"modules": true,
			"experimentalObjectRestSpread": true
		},
		"sourceType": "module"
	},
	"rules": {
		"arrow-spacing": 1,
		"indent": [2, "tab", { "SwitchCase": 1 }],
		"max-classes-per-file": 2,
		"max-depth": 2,
		"max-len": [2, 250],
		"max-lines": [1, 400],
		"max-lines-per-function": [1, 150],
		"max-nested-callbacks": 2,
		"max-params": [2, 8],
		"max-statements": [1, 30],
		"max-statements-per-line": 2,
		"no-alert": 2,
		"no-console": 0,
		"no-duplicate-imports": 2,
		"no-empty-function": 2,
		"no-loop-func": 1,
		"no-script-url": 2,
		"no-var": 2,
		"no-unused-vars": [0, { "ignoreRestSiblings": true }],
		"require-await": 2,
		"semi": [2, "always"],
		"quotes": [2, "double"]
	}
}